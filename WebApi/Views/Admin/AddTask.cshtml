@model WebApi.Infrastructure.Models.DTO.TaskDto
@{
    ViewBag.Title = "Добавить задание к теме";
    Layout = "_MasterPage";
}

<style>
    form.custom-form {
        max-width: 600px;
        margin: 0 auto;
        padding: 25px;
        background-color: #f9f9f9;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        font-family: sans-serif;
    }

    .custom-form h2 {
        margin-bottom: 20px;
        text-align: center;
        color: #333;
    }

    .custom-form label {
        display: block;
        margin-bottom: 5px;
        font-weight: 600;
        color: #444;
    }

    .custom-form input[type="text"],
    .custom-form input[type="number"],
    .custom-form textarea,
    .custom-form input[type="file"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 6px;
        transition: border-color 0.2s;
    }

    .custom-form input:focus,
    .custom-form textarea:focus {
        border-color: #007bff;
        outline: none;
    }

    .custom-form button,
    .custom-form a.btn-cancel {
        display: inline-block;
        padding: 10px 20px;
        border: none;
        text-decoration: none;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        margin-top: 10px;
    }

    .custom-form button {
        background-color: #007bff;
        color: white;
    }

    .custom-form button:hover {
        background-color: #0056b3;
    }

    .custom-form a.btn-cancel {
        background-color: #ccc;
        color: #333;
        margin-left: 10px;
    }

    .custom-form a.btn-cancel:hover {
        background-color: #aaa;
    }
</style>

<form method="post" asp-action="AddTask" asp-controller="Admin" enctype="multipart/form-data" class="custom-form">
    <h2>Добавить задание к теме ID: @Model.ThemeId</h2>

    <input type="hidden" name="ThemeId" value="@Model.ThemeId"/>

    <label for="Text">Текст задания</label>
    <textarea id="Text" name="Text" rows="4" required></textarea>

    <label for="CorrectAnswer">Верный ответ</label>
    <input id="CorrectAnswer" name="CorrectAnswer" type="text" required />

    <label for="DifficultyLevel">Сложность (1–5)</label>
    <input id="DifficultyLevel" name="DifficultyLevel" type="number" min="1" max="5" required />

    <label for="Image">Картинка (опционально)</label>
    <input id="Image" type="file" name="Image" accept="image/*" />

    <label for="File">Файл (опционально)</label>
    <input id="File" type="file" name="File" />

    <button type="submit">Добавить задание</button>
    <a href="@Url.Action("Themes", "Admin")" class="btn-cancel">Отмена</a>
</form>
