@model WebApi.Infrastructure.Models.DTO.TaskDto

@{
    ViewBag.Title = "Задания";
    Layout = "_MasterPage";
}

<style>
    form.custom-form {
        max-width: 650px;
        margin: 0 auto;
        padding: 25px;
        background-color: #f9f9f9;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        font-family: sans-serif;
    }

    .custom-form label {
        display: block;
        margin-bottom: 5px;
        font-weight: 600;
        color: #444;
    }

    .custom-form input[type="text"],
    .custom-form input[type="number"],
    .custom-form textarea,
    .custom-form input[type="file"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 6px;
        transition: border-color 0.2s;
    }

    .custom-form input:focus,
    .custom-form textarea:focus {
        border-color: #007bff;
        outline: none;
    }

    .custom-form button {
        padding: 10px 20px;
        background-color: #007bff;
        border: none;
        color: white;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        margin-top: 10px;
    }

    .custom-form button:hover {
        background-color: #0056b3;
    }
</style>

<form asp-action="EditTask" asp-controller="Admin" method="post" enctype="multipart/form-data" class="custom-form">
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="hidden" name="ThemeId" value="@Model.ThemeId" />

    <label for="Text">Текст задания</label>
    <textarea id="Text" name="Text" rows="4" required>@Model.Text</textarea>

    <label for="CorrectAnswer">Правильный ответ</label>
    <input id="CorrectAnswer" name="CorrectAnswer" type="text" required value="@Model.CorrectAnswer" />

    <label for="DifficultyLevel">Уровень сложности</label>
    <input id="DifficultyLevel" name="DifficultyLevel" type="number" min="1" max="5" required value="@Model.DifficultyLevel" />

    <label for="Image">Картинка (опционально)</label>
    <input id="Image" type="file" name="Image" accept="image/*" />

    <label for="File">Файл (опционально)</label>
    <input id="File" type="file" name="File" />

    <button type="submit">Сохранить</button>
</form>
