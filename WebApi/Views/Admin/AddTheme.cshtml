@model WebApi.Infrastructure.Models.Requests.CreateTheme

@{
    ViewBag.Title = "Добавить тему";
    Layout = "_MasterPage";
}

<h2>Добавить новую тему</h2>

<form method="post" asp-action="AddTheme" asp-controller="Admin">
    <label for="Title">Название темы</label><br />
    <input type="text" id="Title" name="Title" required /><br /><br />

    <label for="Description">Описание</label><br />
    <textarea id="Description" name="Description" rows="4"></textarea><br /><br />

    <button type="submit">Создать тему</button>
    <a href="@Url.Action("Themes", "Admin")" style="margin-left:10px;">Отмена</a>
</form>